#include <PRIZM.h>  // Include PRIZM Library
PRIZM prizm;

//variables
int turnNumber = 0;

void setup() {
prizm.PrizmBegin(); // Initiates the PRIZM controller

}

void loop() {
if (turnNumber == 0){
  prizm.setMotorPowers(50,-50);

  if(prizm.readLineSensor(3) == 1){
    prizm.setMotorPowers(125,125);

    delay(1000);
    
    prizm.resetEncoders();
    prizm.setMotorDegrees(200,410,-200,-410 );
  delay(2000);
    prizm.resetEncoders();    
    prizm.setMotorDegree(1,400,1425);
    while (prizm.readMotorBusy(1)==1){}
     prizm.resetEncoders();
     turnNumber=turnNumber+1;
  }
}

if (turnNumber==1){
  prizm.setMotorPowers(50,-50);

  if(prizm.readSonicSensorCM(2)==10){
    prizm.setMotorPowers(125,125);
    turnNumber=turnNumber+1;
  }
}
if (turnNumber==2){
  prizm.setMotorDegrees(400,-1425,400,1425);
  prizm.setMotorPowers(50,-50);

  if(prizm.readSonicSensorCM(2)==10){
    prizm.setMotorPowers(125,125);
    turnNumber=turnNumber+1;
 
  }
} 
}
